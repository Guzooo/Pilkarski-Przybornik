<resources>

    <style name="AppTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>

        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.PlayerTitle">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.PlayerDescription">
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="AppTheme.Icon.Game">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">@dimen/minimal_game_icon_height</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppTheme.Icon" parent="AppTheme.AllClickable">
        <item name="tint">@color/primaryIcon</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:textColor">@color/primaryText</item>
        <item name="backgroundTint">@color/colorSecondary</item>]
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>
    
    <style name="AppTheme.AllClickable">
        <item name="android:minHeight">@dimen/minimal_length</item>
        <item name="android:minWidth">@dimen/minimal_length</item>
    </style>

    <style name="AppTheme.EditText" parent="AppTheme.AllClickable">
        <item name="android:backgroundTint">@color/colorAccentSecondary</item>
        <item name="android:textColorHint">@color/secondaryText</item>
    </style>

    <style name="AppTheme.EditTextSettings" parent="AppTheme.EditText">
        <item name="android:maxWidth">@dimen/minimal_length</item>

    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="AppTheme.Separator">
        <item name="android:src">@color/primarySeparator</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
    </style>

    <style name="AppTheme.Separator.Vertical">
        <item name="android:layout_width">@dimen/separator_length</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.Separator.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_length</item>
    </style>

</resources>
