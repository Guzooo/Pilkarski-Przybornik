<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>

        <item name="editTextColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.GameIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">@dimen/minimal_game_icon_height</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="tint">@color/primaryIcon</item>
    </style>

    <style name="AppTheme.Separator">
        <item name="android:src">@color/primarySeparator</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
    </style>

    <style name="AppTheme.Separator.Vertical">
        <item name="android:layout_width">@dimen/separator_length</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.Separator.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_length</item>
    </style>

</resources>
