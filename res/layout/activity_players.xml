<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayersActivity"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/add"
        android:tint="@color/primaryIcon"
        app:backgroundTint="@color/colorSecondary"
        android:onClick="ClickMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/floating_button_margin"
        android:layout_marginRight="@dimen/floating_button_margin"
        android:layout_marginBottom="@dimen/floating_button_margin" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button_menu_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/delete"
        android:tint="@color/primaryIcon"
        app:backgroundTint="@color/colorAlert"
        android:onClick="ClickMenuDel"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/floating_button_margin"
        android:layout_marginRight="@dimen/floating_button_margin"
        android:layout_marginBottom="@dimen/floating_button_margin" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/floating_button_margin"
        android:labelFor="@id/floating_action_button"
        android:src="@drawable/add"
        android:tint="@color/primaryIcon"
        app:backgroundTint="@color/colorSecondary"
        android:onClick="ClickAdd"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/floating_action_button"
        app:layout_constraintEnd_toEndOf="@+id/floating_action_button"
        app:layout_constraintStart_toStartOf="@+id/floating_action_button" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/floating_button_margin"
        android:labelFor="@id/floating_action_button"
        android:src="@drawable/share"
        android:tint="@color/primaryIcon"
        app:backgroundTint="@color/colorSecondary"
        android:onClick="ClickShare"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/floating_action_button_add"
        app:layout_constraintEnd_toEndOf="@+id/floating_action_button"
        app:layout_constraintStart_toStartOf="@+id/floating_action_button" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/floating_button_margin"
        android:labelFor="@id/floating_action_button"
        android:src="@drawable/delete"
        android:tint="@color/primaryIcon"
        app:backgroundTint="@color/colorSecondary"
        android:onClick="ClickDel"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/floating_action_button_share"
        app:layout_constraintEnd_toEndOf="@+id/floating_action_button"
        app:layout_constraintStart_toStartOf="@+id/floating_action_button" />
</android.support.constraint.ConstraintLayout>